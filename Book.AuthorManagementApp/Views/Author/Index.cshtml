@model List<Author>

<h3>Author list: </h3>

<table>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Id</th>
      <th scope="col">Author</th>
      <th scope="col">Remove</th>      
    </tr>
  </thead>
  <tbody>
      @foreach (var author in @Model)
        {
        <tr>
          <th scope="row"></th>
          <td>@author.Id</td>
          <td>@author.Name</td>
          <td>@Html.ActionLink("Remove", "Delete", "Author", new { Name = @author.Name})</td>
        </tr>
        }   
  </tbody>
</table>