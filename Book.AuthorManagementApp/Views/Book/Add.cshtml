
@using Book.AuthorManagementApp.Dto
@model CreateBookDto

<h2>Register</h2>

@using (Html.BeginForm("Add", "Book", FormMethod.Post))
{
   <div class="form-row">
    <div class="col-5">
        @Html.LabelFor(a => a.Books.Title)
        @Html.TextBoxFor(a => a.Books.Title, "", new {@class = "form-control"})
    </div>
    <div class="col-3">
        @Html.LabelFor(a => a.Books.AuthorName)
        @Html.DropDownListFor(a => a.Books.AuthorId, new SelectList(@Model.Authors, "Id", "Name"), "", new {@class = "form-control"} )
    </div>
     <div class="col">
       <button type="submit" class="btn btn-dark">Add</button>
    </div>
      
    </div>
     
  
}