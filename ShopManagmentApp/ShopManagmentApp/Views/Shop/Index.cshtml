@model List<ShopItem>

<h3>Shop Item List </h3>

<table>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Shop Name</th>
      <th scope="col">Expire Date</th>
      <th scope="col">Remove</th>
      <th scope="col">Edit</th>
      
    </tr>
  </thead>
  <tbody>
      @foreach (var shop in @Model)
        {
        <tr>
          <th scope="row"></th>
          <td>@shop.Name</td>
          <td>@shop.ShopName</td>
          <td>@shop.ExpireDate.ToString("yyy/MM/dd")</td>
          <td>@Html.ActionLink("Remove", "Delete", "Shop", new { Name = @shop.Name})</td>
          <td>@Html.ActionLink("Edit", "Edit", "Shop", new { Name = @shop.Name})</td>
        </tr>
        }   
  </tbody>
</table>